{% extends 'layouts/base.html.twig' %}

{% block body %}
  <div class="container">
    <div class="d-f w-100 j-c-center">
      <div class="breadcrumbs">
        <ul>
          <li><a href="#">Главная</a></li>
          <li><a class="active" href="#">Каталог провайдеров обучения</a></li>
