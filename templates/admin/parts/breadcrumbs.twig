<div class="row my-3 mx-0">
  <div class="col-sm-6 offset-sm-6 px-0">
    <ol class="breadcrumb float-sm-right mb-0">
      {% for item in items %}
        <li class="breadcrumb-item {{ loop.last ? 'active' : '' }}">
          {% if item.url is not null %}
            <a href="{{ item.url }}">{{ item.name }}</a>
          {% else %}
            {{ item.name }}
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </div>
</div>
