{% extends 'layouts/admin.base.html.twig' %}

{% set title = 'Список рубрик' %}

{% block body %}
  {% include 'admin/parts/breadcrumbs.twig' with { items: [
    { name: 'Главная', url: path('admin.site.index') },
  ] } %}

  <div class="row mx-0">
    <div class="col-12 p-0">
      <div class="portlet">
        <div class="portlet__head">
          <div class="portlet__head-label w-100">
            <div class="row w-100">
              <div class="col-6 my-auto">
                <h3 class="portlet__head-title">
                  <i class="fa fa-tags"></i>
                  &nbsp;{{ title }}
                </h3>
              </div>
              <div class="col-6">
                <a class="btn btn-primary fa-pull-right" href="{{ path('admin.rubric.create') }}">Создать</a>
              </div>
            </div>
          </div>
        </div>
        <div class="portlet__body">
          <div class="row">
            <div class="col-sm-6">
              {% if rubrics is empty %}
                <div class="alert alert-warning fade show mb-0" role="alert">
                  <i class="fas fa-exclamation-triangle"></i>
                  &nbsp;Спибок рубрик пуст!
                </div>
              {% else %}
                <table class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Id</th>
                    <th>Название</th>
                    <th>Сортировка</th>
                    <th></th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for rubric in rubrics %}
                    <tr>
                      <td>{{ rubric.id }}</td>
                      <td>{{ rubric.name }}</td>
                      <td>{{ rubric.sort }}</td>
                      <td class="text-center">
                        <a href="{{ path('admin.rubric.edit', {id: rubric.id}) }}" class="pr-1">
                          <i class="fa fa-edit"></i>
                        </a>
                        <a href="{{ path('admin.rubric.destroy', {id: rubric.id}) }}" onclick="return confirm('Вы уверены?')" class="pl-1">
                          <i class="far fa-trash-alt"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                  </tbody>
                </table>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
