<div class="blog">
  <div class="container">
    <div class="title-main"> Статьи</div>
    <div class="blog-wrapper">
      <div class="blog-items" id="sliderBlog">
        {% for article in articles %}
          <a class="blog-item" href="{{ path('blog.view', {slug: article.slug}) }}">
            <div class="blog-item__photo">
              <img src="{{ article.imageSrc }}" alt="Photo"/>
            </div>
            <div class="blog-item__main">
              <div class="blog-item__main-date">
                <span class="date">{{ article.createdAt.day }}</span>
                {{ ('date.month.' ~ article.createdAt.month) | trans }}
              </div>
              <div class="blog-item__title">{{ article.name }}</div>
              <div class="blog-item__desc">{{ article.previewText | raw }}</div>
            </div>
          </a>
        {% endfor %}
      </div>
      <div class="blog-btn-container">
        <a class="btn btn-blue" href="#">Перейти в Блог </a>
      </div>
    </div>
  </div>
</div>
