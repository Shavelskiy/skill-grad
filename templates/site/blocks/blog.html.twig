<div class="main__articles">
  <div class="container">
    <div class="col-lg-12">
      <h2 class="title">Статьи</h2>
    </div>
    <div class="col-lg-12 col-sm-4">
      <div class="blog">
        {% for article in articles %}
          <div class="blog-item">
            <div class="card-article">
              <div class="card-article__header">
                <img src="{{ article.imageSrc }}" alt="">
                <span class="card-article__header-date">
                  <span class="day">{{ article.createdAt.day }}</span>
                  {{ article.createdAt.month|month }}
                </span>
              </div>
              <div class="card-article__body">
                <a href="{{ path('blog.view', {article: article.id}) }}" class="card-article__body-title">
                  {{ article.name }}
                </a>
                <span class="hr"></span>
                <div class="card-article__body-description">
                  <p>{{ article.previewText|slice(0, 300) }}{{ article.previewText|length > 300 ? '...' : '' }}</p>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="row j-c-center">
      <div class="col-lg-4 col-sm-4">
        <a href="{{ path('blog.index') }}" class="button-blue">Перейти в блог</a>
      </div>
    </div>
  </div>
</div>
