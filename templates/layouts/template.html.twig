<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="format-detection" content="telephone=no">
  <meta name="format-detection" content="date=no">
  <meta name="format-detection" content="address=no">
  <meta name="format-detection" content="email=no">

  {% if meta_title is defined and meta_title|length > 0 %}
    <title>{{ meta_title }}</title>
  {% else %}
    <title>{{ title is defined ? title : 'Skill Grad' }}</title>
  {% endif %}

  {% if meta_description is defined and meta_description|length > 0 %}
    <meta name="description" content="{{ meta_description }}">
  {% endif %}

  {% if meta_keywords is defined and meta_keywords|length > 0 %}
    <meta name="keywords" content="{{ meta_keywords }}">
  {% endif %}

  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  {% block stylesheets %}
    {{ encore_entry_link_tags('site.layout') }}
  {% endblock %}
</head>
<body data-auth="{{ app.user is not null ? 'true' : 'false' }}">

{% block conent %}{% endblock %}

{% include 'components/footer/index.html.twig' %}

{% block modals %}
  {% include 'components/modals/index.html.twig' %}
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('site.layout') }}
{% endblock %}
</body>
</html>
