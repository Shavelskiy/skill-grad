{{ form_start(form) }}

<div class="portlet">
  <div class="portlet__head">
    <div class="portlet__head-label">
      <h3 class="portlet__head-title">
        <i class="fas fa-info"></i>
        &nbsp;{{ title }}
      </h3>
    </div>
  </div>

  <div class="portlet__body">
    <div class="form-group">
      {{ form_row(form.name) }}
    </div>
    <div class="form-group">
      {{ form_row(form.sort) }}
    </div>
  </div>

  <div class="portlet__foot">
    {{ form_row(form.save) }}
  </div>

</div>
{{ form_end(form) }}
