{% extends 'layouts/admin.base.html.twig' %}

{% set title = 'Список местоположений' %}

{% block body %}
  {% include 'admin/parts/breadcrumbs.twig' with { items: [
    { name: 'Главная', url: path('admin.site.index') },
  ] } %}

  <div class="row mx-0">
    <div class="col-12 p-0">
      <div class="portlet">
        <div class="portlet__head">
          <div class="portlet__head-label w-100">
            <div class="row w-100">
              <div class="col-6 my-auto">
                <h3 class="portlet__head-title">
                  <i class="fa fa-globe"></i>
                  &nbsp;{{ title }}
                </h3>
              </div>
              <div class="col-6">
                <a class="btn btn-primary fa-pull-right" href="{{ path('admin.rubric.create') }}">Создать</a>
              </div>
            </div>
          </div>
        </div>
        <div class="portlet__body">
          <div class="row">
            <div class="col-sm-12">
              <form class="filter-form">
                <div class="form-group row">
                  <label for="paymentId" class="col-auto col-form-label">Id:</label>
                  <div class="col-sm-1 px-0">
                    <input type="number" class="form-control" id="id" value="{{ filter.id ?? '' }}" name="filter[id]">
                  </div>
                  <label for="orderId" class="col-auto col-form-label">Название:</label>
                  <div class="col-sm-1 px-0">
                    <input type="text" class="form-control" id="name" value="{{ filter.name ?? '' }}" name="filter[name]">
                  </div>
                  <label class="col-auto col-form-label" for="state">Тип:</label>
                  <div class="col-sm-1 px-0">
                    <select class="form-control" id="type" name="filter[type]">
                      <option value="" {{ (filter.type is not defined or filter.type not in constant('App\\Entity\\Location::TYPES')) ? 'selected' : '' }}>Не выбрано</option>
                      {% for type in constant('App\\Entity\\Location::TYPES') %}
                        <option value="{{ type }}" {{ (filter.type is defined and filter.type == type) ? 'selected' : '' }}>{{ ('location.type.' ~ type) | trans }}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-search"></i>
                      &nbsp;Найти
                    </button>
                    <button type="reset" class="btn btn-light">Сбросить</button>
                  </div>
                </div>
              </form>

              <div class="table-hr"></div>
              {% if locations is empty %}
                <div class="alert alert-warning fade show mb-0" role="alert">
                  <i class="fas fa-exclamation-triangle"></i>
                  &nbsp;Спибок местоположений пуст!
                </div>
              {% else %}
                <table class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Id</th>
                    <th>Название</th>
                    <th>Тип</th>
                    <th>Сортировка</th>
                    <th></th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for location in locations %}
                    <tr>
                      <td>{{ location.id }}</td>
                      <td>{{ location.name }}</td>
                      <td>{{ ('location.type.' ~ location.type) | trans }}</td>
                      <td>{{ location.sort }}</td>
                      <td class="text-center">
                        <a href="{{ path('admin.location.view', {id: location.id}) }}" class="pr-1">
                          <i class="fa fa-eye"></i>
                        </a>
{#                        <a href="{{ path('admin.rubric.edit', {id: rubric.id}) }}" class="pr-1">#}
{#                          <i class="fa fa-edit"></i>#}
{#                        </a>#}
{#                        <a href="{{ path('admin.rubric.destroy', {id: rubric.id}) }}" onclick="return confirm('Вы уверены?')" class="pl-1">#}
{#                          <i class="far fa-trash-alt"></i>#}
{#                        </a>#}
                      </td>
                    </tr>
                  {% endfor %}
                  </tbody>
                </table>
              {% endif %}
            </div>
          </div>

          {% include 'admin/parts/paginator.html.twig' with {
            pageCount: pageCount,
            page: page,
            route: 'admin.location.index',
          } %}

        </div>
      </div>
    </div>
  </div>
{% endblock %}
