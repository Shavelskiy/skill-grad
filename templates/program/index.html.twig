{% extends 'layouts/base.html.twig' %}

{% set title = 'Каталог программ обучения' %}

{% block body %}
  <div class="container">
    <div class="d-f w-100 j-c-center">
      <div class="breadcrumbs">
        <ul>
          <li><a href="{{ path('site.index') }}">Главная</a></li>
          <li><a class="active" href="#">{{ title }}</a></li>
        </ul>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="main-catalog mt-0">
        <h2 class="title">{{ title }}</h2>
        <div class="box">
          <div class="mobile-filter">
            <div id="open-filter" class="mobile-filter-header">
              Фильтр поиска
              <i class="icon-more"></i>
            </div>
            <div id="filter" class="mobile-filter-content">
              {% include 'program/blocks/catalog-filter.html.twig' %}
            </div>
          </div>
          <div class="box-content">
            <div class="container-0">
              <div class="col-lg-12 pl-0">
                {% for program in programs %}
                  {% include 'program/card-program.html.twig' with {
                    program: program,
                    additional: programAdditional(program)
                  } %}
                {% endfor %}
              </div>
            </div>
          </div>
          <div class="box-sidebar">
            <div class="container-0">
              <div class="col-lg-12 pr-0">
                {% include 'program/blocks/catalog-filter.html.twig' %}
              </div>
            </div>
          </div>
        </div>

        {% include 'components/paginator.html.twig' with {
          page: page,
          total_pages: total_pages,
          path_name: 'program.index'
        } %}
      </div>
    </div>
  </div>
{% endblock %}
